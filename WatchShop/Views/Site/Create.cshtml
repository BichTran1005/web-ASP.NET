@model WatchShop.Models.User
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2>Loại sản phẩm</h2>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-7">
                    Thêm loại sản phẩm
                </div>
                <div class="col-sm-5 text-right">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i> Lưu</button>
                    <a href="~/Admin/user" class="btn btn-sm btn-danger"><i class="fas fa-times"></i> Thoát</a>
                </div>
            </div>
        </div>
        <div class="card-body p-2">
            @Html.Partial("_MessageAlert")
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label>Tên người dùng</label>
                        @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>Tài khoản</label><br />
                            @Html.TextAreaFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label><br />
                            @Html.TextAreaFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Email</label><br />
                            @Html.TextAreaFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="form-group">
                            <label>Số điện thoại</label><br />
                            @Html.TextBoxFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })

                        </div>
                        <label>Giới tính</label><br />
                        @Html.DropDownListFor(model => model.gender, new[] { new SelectListItem { Value = "1", Text = "Nữ" }, new SelectListItem { Value = "0", Text = "Nam" } })
                        @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Cấp quyền</label><br />
                        @Html.EditorFor(model => model.access, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.access, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label><br />
                        @Html.DropDownListFor(model => model.status, new[] { new SelectListItem { Value = "1", Text = "Xuất bản" }, new SelectListItem { Value = "2", Text = "Chưa xuất bản" } })
                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
        </div>

    </div>
}