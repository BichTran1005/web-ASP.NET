@model IEnumerable<WatchShop.Models.Slider>

@{
    /**/

    ViewBag.Title = "Quản lí thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Loại sản phẩm</h2>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-7">
                Quản lí thùng rác
            </div>
            <div class="col-sm-5 text-right">

                <a href="~/Admin/slider" class="btn btn-sm btn-danger"><i class="fas fa-times"></i> Thoát</a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        @Html.Partial("_MessageAlert")
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>Tên</th>
                <th>Vị trí</th>
                <th>Hình</th>
                <th>Thứ tự</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th> ID</th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td> <input type="checkbox" name=" checkid[]" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.orders)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.created_at)
                    </td>

                    <td>


                        <a href="@Url.Action("Retrash", "Slider", new { id = item.id })" , class="btn btn-sm btn-success"><i class="fas fa-undo-alt"></i></a>
                        <a href="@Url.Action("Delete", "Slider", new { id = item.id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

