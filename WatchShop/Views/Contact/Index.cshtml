@model WatchShop.Models.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using (Html.BeginForm())
{

    <div class="container my-2">
        <h2 class="container">Liên Hệ</h2>
        @Html.ValidationSummary(true,"", new  {@class="text-danger" })
        <div class="form-group">
            <label>Họ tên</label>
            @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Tiêu đề</label>
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Nội dung</label>
            @Html.TextAreaFor(model => model.detail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.detail, "", new { @class = "text-danger" })
        </div>
        <button name="GUI" type="submit" class="btn btn-sm btn-success mb-2">Gửi</button>
    </div>

}

