

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/LayoutAdmin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div style="max-width:500px; min-height:200px;" class="container">
        <form name="form2" action="" method="post">
            <div class="imgcontainer">
                <img src="img_avatar2.png" alt="Avatar" class="avatar">
            </div>


            <div class="container">
                <label for="uname"><b>Tài khoản</b></label>
                <input type="text" placeholder="Tài khoản hoặc email" name="Username" required>

                <label for="psw"><b>Mật khẩu</b></label>
                <input type="password" placeholder="mật khẩu" name="Password" required>
                <div>
                    @Html.Raw(ViewBag.Error)
                </div>
                <button class="butonlg" type="submit">Đăng nhập</button>

            </div>


        </form>
    </div>
</body>
</html>
