@model IEnumerable<WatchShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-7">
                Quản lí loại sản phẩm
            </div>
            <div class="col-sm-5 text-right">
                <a href="~/Admin/product" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thoát</a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        @Html.Partial("_MessageAlert")
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    #
                </th>
                <th>Tên</th>
                <th>Loại sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Chi tiết</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Giá khuyến mãi</th>
                <th>Trạng thái</th>
                <th>
                    ID
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name=" checkid[]" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.catid)*@
                        @*@Url.Action("CategoryName", new { id = item.catid }))
                            ViewBag.name*@
                        @Html.Action("CategoryName", "Product", new { id = item.catid })
                    </td>
                    <td>
                        <img style="height:100px; width:100px;" src="~/Image/Product/@item.img" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pricesale)
                    </td>


                    <td>
                        <a href="@Url.Action("Retrash", "Product", new { id = item.id })" , class="btn btn-sm btn-success"><i class="fas fa-undo-alt"></i></a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>