@model IEnumerable<WatchShop.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Bài Viết</h2>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-7">
                Quản lí loại sản phẩm
            </div>
            <div class="col-sm-5 text-right">
                <a href="~/Admin/post/create" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Thêm</a>
                <a href="~/Admin/post/trash" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        @Html.Partial("_MessageAlert")
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>Chủ đề bài viết</th>
                <th>Nội dung</th>
                <th>Hình</th>
                <th>Loại chủ đề</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>ID</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name=" checkid[]" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.created_at)
                    </td>
                    <td>
                        @if (item.status == 1)
                        {
                            <a href="@Url.Action("status","Post", new { id=item.id})" class="btn btn-sm btn-primary"><i class="fas fa-toggle-on"></i></a>
                        }
                        else
                        {
                            <a href="@Url.Action("status","Post", new { id=item.id})" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i></a>
                        }

                        <a href="@Url.Action("Edit", "Post", new { id = item.id })" , class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Detrash", "Post", new { id = item.id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>

                    </td>
                    <td>  @Html.DisplayFor(modelItem => item.topid)</td>
                </tr>
            }

        </table>
    </div>
</div>